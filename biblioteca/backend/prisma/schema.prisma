datasource db {
  provider="mysql"
  url = env("DATABASE_URL")
}

generator client {
  provider="prisma-client-js"
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  roles     String    @default("usuario")
  libros    Libro[]
}

model Libro {
  id           Int      @id @default(autoincrement())
  titulo       String   
  autor        String?
  categoria    String?
  descripcion  String?
  disponible   Boolean  @default(true)
  usuarioId    Int
  usuario      Usuario @relation (fields: [usuarioId], references: [id])
}

model TokenRevocado {
  id           Int      @id @default(autoincrement())
  token        String   @unique
  createAt     DateTime @default(now())
}


